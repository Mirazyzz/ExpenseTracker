@model ExpenseTracker.ViewModels.Category.CategoryViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row">
    <div class="col-md-7">
        <div class="widget p-5" style="background-color:#212b36">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="CategoryId" value="@Model.Id" />
            <div class="mb-3">
                <label class="e-btn" id="@(Model.Type == ExpenseTracker.Domain.Enums.CategoryType.Income ? "bg-green" : "bg-red")" for="radioleft">@(Model.Type == ExpenseTracker.Domain.Enums.CategoryType.Income ? "Income" : "Expense")</label>
            </div>
            <div class="mb-3">
                <ejs-textbox id="title" placeholder="Title" readonly="true" value="@Model.Name" floatLabelType="Always"></ejs-textbox>
            </div>
            <div class="mb-3">
                <ejs-textbox id="note" placeholder="Description" readonly="true" value="@Model.Description"
                             floatLabelType="Always" multiline="true"></ejs-textbox>
            </div>
            <div class="d-flex gap-3 mb-3">
                <ejs-textbox id="createdAt" placeholder="Created date" readonly="true" value="@Model.CreatedAt" floatLabelType="Always"></ejs-textbox>
                <ejs-textbox id="updateAt" placeholder="Updated date" readonly="true" value="@(Model.UpdatedAt == null ? "--/--/----" : Model.UpdatedAt)" floatLabelType="Always"></ejs-textbox>
            </div>
            <div class="d-flex gap-3 justify-content-between">
                <a asp-action="Index" asp-asp-controller="Categories">
                    <ejs-button id="submit" asp-action="Index" asp-controller="Category" content="Back" cssClass="e-secondary" style="background-color: #343A40"></ejs-button>
                </a>
                <div class="gap-1">
                    <a class="btn btn-sm no-a-decoration" asp-action="Edit" asp-route-id="@Model.Id">
                        <i class="fa-solid fa-pencil fa-lg text-warning"></i>
                    </a>
                    <a class="btn btn-sm no-a-decoration" asp-action="Delete" asp-route-id="@Model.Id">
                        <i class="fa-solid fa-trash-can fa-lg text-danger"></i>
                    </a>
                </div>
            </div>
        </div>


    </div>
    <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center">
            <i class="fa-solid fa-shapes fa-2xl"></i>
        </div>
    </div>
</div>
